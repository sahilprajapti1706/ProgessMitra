<% layout("./layouts/boilerplate.ejs") %>
    

<!-- Add New Task -->
    <div class="row">
        <div class="col-10 col-md-4 offset-md-4 box-effect px-4 py-3 mx-auto">
            <form action="/addTask" method="post" class="needs-validation" novalidate>

                <h3 class="text-center">Add New Task</h3>
                <div>
                    <label for="subject" class="form-label fs-5">Subject</label>
                    <input type="text" id="subject" placeholder="Enter Subject" class="form-control" name="subject[name]" 
                    required>
                    <div class="invalid-feedback is-invalid">Please enter subject</div>
                </div>
            <h5 class="mt-2">Select Days:</h5>    

            <div class="ps-4">
                <div class="form-check">
                    <label class="form-check-label mx-2" for="monday">Monday</label>
                    <input class="form-check-input" type="checkbox" value="Monday" id="monday" name="subject[studyDays]">
                </div>

                <div class="form-check">
                        <label class="form-check-label  mx-2" for="tuesday">Tuesday</label>
                        <input class="form-check-input" type="checkbox" value="Tuesday" id="tuesday" name="subject[studyDays]">
                </div>

                <div class="form-check">
                        <label class="form-check-label  mx-2" for="wednesday">Wednesday</label>
                        <input class="form-check-input" type="checkbox" value="Wednesday" id="wednesday" name="subject[studyDays]">
                </div>

                <div class="form-check">
                        <label class="form-check-label  mx-2" for="thursday">Thursday</label>
                        <input class="form-check-input" type="checkbox" value="Thursday" id="thursday" name="subject[studyDays]">
                </div>

                <div class="form-check">
                        <label class="form-check-label  mx-2" for="friday">Friday</label>
                        <input class="form-check-input" type="checkbox" value="Friday" id="friday" name="subject[studyDays]">
                </div>

                <div class="form-check">
                        <label class="form-check-label  mx-2" for="saturday">Saturday</label>
                        <input class="form-check-input" type="checkbox" value="Saturday" id="saturday" name="subject[studyDays]">
                </div>

                <div class="form-check">
                        <label class="form-check-label  mx-2" for="sunday">Sunday</label>
                        <input class="form-check-input" type="checkbox" value="Sunday" id="sunday" name="subject[studyDays]">
                </div>

            </div>

                <div class="d-flex justify-content-center align-items-center mt-md-2">
                    <button type="submit" class="btn btn-secondary"> Add </button>
                </div>
            </form> 
        </div>

    </div>
